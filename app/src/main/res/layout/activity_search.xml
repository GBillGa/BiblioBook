<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search"
    android:background="@color/logoColor">

    <EditText
        android:id="@+id/searchField"
        android:layout_width="259dp"
        android:layout_height="57dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/brown"
        android:ems="10"
        android:hint="@string/placeholderSearch"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textCursorDrawable="@drawable/color_cursor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAutofill="no" />

    <ImageView
        android:id="@+id/searchIconImage"
        android:layout_width="59dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="40dp"
        android:contentDescription="@string/imageSearchDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchField"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loupe" />

    <ToggleButton
        android:id="@+id/JFiction"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/select_toggle_button"
        android:stateListAnimator="@null"
        android:textColor="@drawable/select_toggle_button"
        android:textOff="@string/JFToggleButton"
        android:textOn="@string/JFToggleButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchField" />

    <ToggleButton
        android:id="@+id/SScience"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="224dp"
        android:background="@drawable/select_toggle_button"
        android:stateListAnimator="@null"
        android:textColor="@drawable/select_toggle_button"
        android:textOff="@string/SSToggleButton"
        android:textOn="@string/SSToggleButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchField" />

    <ToggleButton
        android:id="@+id/Philo"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="308dp"
        android:background="@drawable/select_toggle_button"
        android:stateListAnimator="@null"
        android:textColor="@drawable/select_toggle_button"
        android:textOff="@string/philosophyToggleButton"
        android:textOn="@string/philosophyToggleButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchField" />

    <ToggleButton
        android:id="@+id/Fiction"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/select_toggle_button"
        android:stateListAnimator="@null"
        android:textColor="@drawable/select_toggle_button"
        android:textOff="@string/fictionToggleButton"
        android:textOn="@string/fictionToggleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchField" />

    <ToggleButton
        android:id="@+id/History"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/select_toggle_button"
        android:stateListAnimator="@null"
        android:textColor="@drawable/select_toggle_button"
        android:textOff="@string/historyToggleButton"
        android:textOn="@string/historyToggleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchField" />

    <ToggleButton
        android:id="@+id/Drama"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/select_toggle_button"
        android:stateListAnimator="@null"
        android:textColor="@drawable/select_toggle_button"
        android:textOff="@string/dramaToggleButton"
        android:textOn="@string/dramaToggleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchField" />
</android.support.constraint.ConstraintLayout>